{
	"manifest_version": 2,
	"name": "Chameleon",
	"version": "0.0.1",

	"default_locale": "en",
	"description": "Protect yourself from browser fingerprinting.",
	"icons": {
		"16": "icons/16.png",
		"48": "icons/48.png",
		"128": "icons/128.png"
	},

	"browser_action": {
		"default_icon": {
			"19": "icons/19.png",
			"38": "icons/38.png"
		},
		"default_title": "Chameleon"
	},

	"author": "ghostwords",
	"background": {
		"scripts": [
			"lib/vendor/underscore-1.6.0.js",
			"js/background.js"
		]
	},
	"content_scripts": [
		{
			"all_frames": true,
			"js": [
				"js/injected.js"
			],
			"matches": [
				"http://*/*",
				"https://*/*"
			],
			"run_at": "document_start"
		}
	],
	"minimum_chrome_version": "33",
	"permissions": [
		"http://*/*",
		"https://*/*",
		"webNavigation",
		"webRequest",
		"webRequestBlocking"
	]
}
