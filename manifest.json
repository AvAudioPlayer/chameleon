{
	"manifest_version": 2,
	"name": "Chameleon",
	"version": "0.0.1",

	"default_locale": "en",
	"description": "Protect yourself from browser fingerprinting.",
	"icons": {
		"16": "icons/16.png",
		"48": "icons/48.png",
		"128": "icons/128.png"
	},

	"browser_action": {
		"default_icon": {
			"19": "icons/19_off.png",
			"38": "icons/38_off.png"
		}
		//"default_popup": "html/panel.html"
	},

	"author": "ghostwords",
	"background": {
		"scripts": [
			"js/background.js"
		]
	},
	"content_scripts": [
		{
			// TODO
			"all_frames": false,
			"js": [
				// TODO name?
				"js/injected.js"
			],
			"matches": [
				"http://*/*",
				"https://*/*"
			],
			"run_at": "document_start"
		}
	],
	//"homepage_url": "http://path/to/homepage",
	"minimum_chrome_version": "33",
	//"options_page": "html/options.html",
	"permissions": [
		"http://*/*",
		"https://*/*",
		"webRequest",
		"webRequestBlocking"
	]
}
